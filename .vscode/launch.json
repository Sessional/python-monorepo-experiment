{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Project",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.${input:project-name}:app",
                "--reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/projects/${input:project-name}"
        }
    ],
    "inputs": [
        {
            "id": "project-name",
            "type": "pickString",
            "options": [
                "app"
            ],
            "description": "The project inside the `projects` folder to attach the debugger.",
            "default": "app"
        }
    ]
}
